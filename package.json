{
  "name": "webpack-dll-ng-module-loader",
  "version": "1.1.0",
  "description": "Cheat AngularCompilerPlugin to work around https://github.com/angular/angular-cli/issues/4565",
  "main": "index.js",
  "license": "CC0-1.0",
  "peerDependencies": {
    "@angular/core": "6 || 7"
  },
  "scripts": {
    "build": "ngc -p tsconfig.json && tsc -p tsconfig.plugin.json",
    "postbuild": "mv src/index.* dist && mv dist/index.ts src",
    "pretest": "npm run build && rm -rf integration/example/src/dist && rm -rf node_modules/webpack-dll-ng-module-loader && cp -r dist node_modules/webpack-dll-ng-module-loader",
    "test": "jest",
    "test:ci": "AOT=true npm test && AOT=false npm test",
    "format": "prettier --write *.{js,json} && prettier --write {src,integration}/**/*.ts",
    "prepublishOnly": "npm run test:ci && mv dist/* ."
  },
  "dependencies": {
    "@types/node": "^10.12.2",
    "@types/webpack": "^4.4.17"
  },
  "files": [
    "index.*",
    "plugin.*"
  ],
  "devDependencies": {
    "@angular/common": "7.2.1",
    "@angular/compiler": "7.2.1",
    "@angular/compiler-cli": "7.2.1",
    "@angular/core": "7.2.1",
    "@angular/platform-browser": "7.2.1",
    "@angular/platform-browser-dynamic": "7.2.1",
    "@angular/router": "7.2.1",
    "@babel/core": "7.2.2",
    "@ngtools/webpack": "7.2.2",
    "@types/jest": "23.3.13",
    "husky": "1.3.1",
    "jest": "23.6.0",
    "lint-staged": "8.1.0",
    "prettier": "1.16.1",
    "rxjs": "6.3.3",
    "ts-jest": "23.10.5",
    "typescript": "3.2.4",
    "webpack": "4.29.0",
    "webpack-cli": "3.2.1",
    "zone.js": "0.8.29"
  }
}
