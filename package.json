{
  "name": "webpack-dll-ng-module-loader",
  "version": "1.0.0",
  "description": "Cheat AngularCompilerPlugin to work around https://github.com/angular/angular-cli/issues/4565",
  "main": "dist/index.js",
  "license": "CC0-1.0",
  "peerDependencies": {
    "@angular/core": "6"
  },
  "scripts": {
    "build": "ngc -p tsconfig.json && tsc -p tsconfig.plugin.json",
    "postbuild": "mv src/index.{js,metadata.json,d.ts,ngsummary.json} dist",
    "pretest": "npm run build && rm -rf integration/example/src/dist && rm -rf node_modules/webpack-dll-ng-module-loader && cp -r dist node_modules/webpack-dll-ng-module-loader",
    "test": "jest",
    "test:ci": "AOT=true npm test && AOT=false npm test",
    "format": "prettier --write *.{js,json} && prettier --write {src,integration}/**/*.ts",
    "prepublishOnly": "npm test"
  },
  "dependencies": {
    "@types/node": "^10.5.2",
    "@types/webpack": "^4.4.8"
  },
  "files": [
    "dist"
  ],
  "devDependencies": {
    "@angular/common": "6.0.9",
    "@angular/compiler": "^6.0.9",
    "@angular/compiler-cli": "^6.0.9",
    "@angular/core": "^6.0.9",
    "@angular/platform-browser": "^6.0.9",
    "@angular/platform-browser-dynamic": "^6.0.9",
    "@angular/router": "^6.0.9",
    "@babel/core": "^7.0.0-0",
    "@ngtools/webpack": "^6.0.8",
    "@types/jest": "^23.3.0",
    "babel-core": "^7.0.0-bridge.0",
    "jest": "^23.4.1",
    "prettier": "^1.13.7",
    "rxjs": "^6.2.2",
    "ts-jest": "^23.0.1",
    "typescript": "2.7.2",
    "webpack": "^4.16.2",
    "webpack-cli": "^3.1.0",
    "zone.js": "^0.8.26"
  }
}
